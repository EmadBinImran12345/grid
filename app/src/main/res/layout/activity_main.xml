<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        tools:context=".Grid_LayoutActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/og_img" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="145dp"
            android:layout_height="99dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left|bottom"

            android:text="Succulent thick juicy portions of grilled fillet steak served with tomatoes and roast vegetables on an old wooden board" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="106dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right|bottom"
            app:srcCompat="@drawable/succulent_thick_juicy_portions_grilled_600w_138421859" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="2"
    android:layout_column="0"
    android:layout_gravity="center"
    android:layout_marginTop="50dp">



    <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#d4c32f"/>

    <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
        android:backgroundTint="#d4c32f"/>

    <Button
    android:id="@+id/button4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Next"
        android:backgroundTint="#d4c32f"/>
</LinearLayout>
    </GridLayout>




</RelativeLayout>